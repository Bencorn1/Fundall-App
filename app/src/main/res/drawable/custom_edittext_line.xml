<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom rectangle (visible part) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <!-- Fill color -->
        </shape>
    </item>

    <!-- Top rectangle (hidden part) -->
    <item android:top="47dp"> <!-- Adjust the top value to control how much is hidden -->
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="#4CE895" />
            <!-- Color of the visible part -->
        </shape>
    </item>

</layer-list>